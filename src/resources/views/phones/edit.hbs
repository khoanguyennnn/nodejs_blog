<div class="mt-4">
    <h3>Edit Phone</h3>

    <form method="POST" action="/phones/{{phone._id}}?_method=PUT">
        <div class="form-group">
            <label for="title">Phone name</label>
            <input type="text" class="form-control" value="{{phone.title}}" id="title" name="title">
        </div>
        <div class="form-group">
            <label for="body">Description</label>
            <textarea class="form-control" id="body" name="body">{{phone.body}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{phone.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="image">Image Link</label>
            <input type="text" class="form-control" value="{{phone.image}}" id="image" name="image">
        </div>
        <button type="submit" class="btn btn-primary">Update Phone</button>
    </form>
</div>