<div class="mt-4">
    <div class="row">
        {{#each blogs}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-2">
                <a href="/phones/{{this.slug}}">
                    <img src={{this.image}} class="card-img-top" alt={{this.title}}>
                </a>
                <div class="card-body">
                    <a href="/phones/{{this.slug}}">
                        <h5 class="card-title">{{this.title}}</h5>
                    </a>
                    <p class="card-text">{{this.body}}</p>
                    <a href="#" class="btn btn-primary d-grid gap-2">Buy</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>